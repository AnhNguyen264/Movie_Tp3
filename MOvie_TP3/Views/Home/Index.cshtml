@inject IViewLocalizer Localizer

@model List<Parent>
@{
    ViewData["titre"] = @Localizer["Title"];
}
@*<partial name="_bannerPartiel" />*@

<div id="carousel_banner" class="carousel slide">
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="/Image/banner 1.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h1>@Localizer["BannerTitle"]</h1>
                <p>
                    @* Regardez des NOUVEAU films*@ @Localizer["BannerDesc1"] <br>
                    @*en ligne en FULL HD*@ @Localizer["BannerDesc2"]
                </p>
                <a href="~/Enfant/Recherche">
                    <button class="btn button_recherche">
                        @* RECHERCHE UN FILM *@ @Localizer["BannerButton"]
                    </button>
                </a>
            </div>

        </div>
        <div class="carousel-item ">
            <img src="/Image/banner 2.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h1>@Localizer["BannerTitle"]</h1>
                <p>
                    @* Regardez des NOUVEAU films*@ @Localizer["BannerDesc1"] <br>
                    @*en ligne en FULL HD*@ @Localizer["BannerDesc2"]
                </p>
                <a href="~/Enfant/Recherche">
                    <button class="btn button_recherche">
                        @* RECHERCHE UN FILM *@ @Localizer["BannerButton"]
                    </button>
                </a>
            </div>
        </div>
        <div class="carousel-item">
            <img src="/Image/banner 3.png" class="d-block w-100" alt="...">
            <div class="carousel-caption d-none d-md-block">
                <h1>@Localizer["BannerTitle"]</h1>
                <p>
                    @* Regardez des NOUVEAU films*@ @Localizer["BannerDesc1"] <br>
                    @*en ligne en FULL HD*@ @Localizer["BannerDesc2"]
                </p>
                <a href="~/Enfant/Recherche">
                    <button class="btn button_recherche">
                        @* RECHERCHE UN FILM *@ @Localizer["BannerButton"]
                    </button>
                </a>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel_banner" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel_banner" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>


<!-- List des films selon le statue -->
<div class="list-statut">
    <div class="container text-center">
        <div class="row align-items-start">

            <a asp-controller="parents" asp-action="index" class="a_btn_tous_statut">
                <button class="button_tous_statut">
                    @Localizer["AllStatut"]
                    <i class="fa-solid fa-arrow-right"></i>
                </button>
            </a>

            @foreach (var item in Model)
            {

                <div class="col statut_item statut_item_mobile col-12 col-md-6 col-lg-4 ">
                    <h3 class="tilte_statut text-uppercase">
                        @item.Nom
                    </h3>
                    <a href="/Home/Consulter/@item.Id"><img src="@item.ImageURL" alt=""></a>
                    <p class="description_statut">
                        @item.Description
                    </p>
                    <p class="statistic_statut" style="padding-bottom: 44px;">
                        <span class="statistic1_statut">
                            + 3M
                            <i class="fa-regular fa-eye"></i>
                        </span>
                        @*<span class="statistic2_statut"> @item.Enfants.Count() Films</span>*@
                    </p>
                    @*<div class="voir_tout_btn">
                        <a href="/Home/Consulter/@item.Id">
                            <button class=" btn button_voirtout_statut" style="color: #fff;">
                                @Localizer["MoreDetail"]

                            </button>
                        </a>
                    </div>*@
                </div>

            }

        </div>

    </div>
</div>
