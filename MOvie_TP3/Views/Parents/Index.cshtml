@model IEnumerable<Parent>
@{
    //ViewData["titre"] = @Locals["Title"];

}
<div class="list-statut">
</div>    ﻿<div class="container p-3">
    <div class="row pt-4">
        <div class="col-10">
            <h2 class="text-primary">@Locals["Title"]</h2>
        </div>
        <div class="col-2 text-right">
            <a class="btn btn-success" asp-controller="Parents" asp-action="Create">
                <i class="fa-solid fa-plus"></i>&nbsp;&nbsp;@Locals["New"]
            </a>
        </div>
    </div>

    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead class="bg-dark text-white">
            <tr>
                <th>
                    @Locals["Name"]
                </th>
                <th> 
                    Image
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td width="40%">
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">
                            @item.Nom
                        </a>
                    </td>
                    <td width="30%">
                        <a class="" asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.ImageURL" alt="">
                        </a>
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a class="btn btn-warning mx-2" asp-action="Edit" asp-route-Id="@item.Id">
                                <i class="fa-solid fa-pen-to-square"></i>&nbsp;&nbsp;@Locals["Edit"]
                            </a>
                            <a class="btn btn-danger mx-2" asp-action="Delete" asp-route-Id="@item.Id">
                                <i class="fa-solid fa-trash"></i>&nbsp;&nbsp;@Locals["Delete"]
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="col-5">
        <a asp-action="Index" asp-controller="Home" class="btn btn-secondary "><i class="fa-solid fa-circle-arrow-left"></i>&nbsp;&nbsp;@Locals["BackToList"]</a>
    </div>
</div>


