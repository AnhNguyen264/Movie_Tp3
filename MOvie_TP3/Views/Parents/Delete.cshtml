@model Parent
@{
    ViewData["titre"] = @Locals["Title"];


}
<h1>@Locals["Title"]</h1>
<form method="post" asp-action="DeletePost">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input asp-for="@Model.Id" class="form-control" hidden />
        <div class="form-group row">
            <h2 class="text-info pl-3">Statut</h2>
            <hr />
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Nom"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Nom" class="form-control" />
                        <span asp-validation-for="Nom" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Description" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row py-2">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <button type="submit" value="Delete" class="btn btn-danger w-100"><i class="fa-solid fa-trash-can"></i>&nbsp;&nbsp;@Locals["Delete"]</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-secondary "><i class="fa-solid fa-circle-arrow-left"></i>&nbsp;&nbsp;@Locals["BackToList"]</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    @*<partial name ="_ValidationScriptsPartial"   />*@

 }


