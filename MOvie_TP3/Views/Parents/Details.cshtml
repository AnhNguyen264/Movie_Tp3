@model ParentVM

@{
    ViewData["Title"] = @Locals["Title"];

}

<h1 style="padding-top:40px">Statut: @Model.parent.Nom</h1>
<h3 style="padding-bottom:30px">@Locals["NbMovie"]: @Model.EnfantCount</h3>

<div class="row">
    @*  POUR CHAQUE ZOMBIE:*@
    @foreach (var item in Model.EnfantList)
    {
        <partial name="_EnfantPartiel" model="item" />
    }
</div>
@* SI AUCUN ZOMBIE ASSOCIÉ*@
@if (Model.EnfantList.Count == 0)
{
    <div class="alert alert-danger">@Locals["Alert"]</div>
}
<div>
    <a class="btn btn-secondary" asp-action="Index">@Locals["BackToList"]</a>
</div>
